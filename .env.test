# Variables de entorno para testing
NODE_ENV=test

# Base de datos de prueba (usar una DB separada!)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/arrendamiento_test

# JWT Secret (puede ser diferente para tests)
JWT_SECRET=test-secret-key-change-this-in-production

# Otros servicios en modo test
FACTURAMA_USER=test_user
FACTURAMA_PASSWORD=test_password
FACTURAMA_BASE_URL=https://api.facturama.mx/api-lite

# Email (usar mailhog o servicio de test)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test

# Deshabilitar servicios externos en testing
DISABLE_EMAIL=true
DISABLE_SMS=true
